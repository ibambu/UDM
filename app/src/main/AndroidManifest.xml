    <application
        android:allowBackup="true"
        android:icon="@mipmap/udm_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.UdmActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DeviceParamSettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.UserProfileActivity" />
        <activity
            android:name=".activity.UdmMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".service.UDPService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.DeviceSearchService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.DeviceParameterService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.TestActivity" />
        <activity android:name=".activity.DeviceProfileActivity" />
        <activity android:name=".activity.IPSettingActivity" />
        <activity android:name=".activity.ConnectSettingActivity" />
        <activity android:name=".activity.OtherSettingActivity" />
        <activity android:name=".activity.TCPConnectionActivity" />
        <activity android:name=".activity.UDPConnectionActivity" />
        <activity android:name=".activity.SerialActivity"></activity>
    </application>

</manifest>