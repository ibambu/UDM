<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibamb.udm.activity.DeviceParamSettingActivity">

    <LinearLayout
        android:id="@+id/tab_param_setting"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_ip_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:textColor="@drawable/udm_color_menu_text_selector"
            android:background="@drawable/udm_color_menu_bg_selector"
            android:text="@string/tab_name_ip_setting" />

        <TextView
            android:id="@+id/menu_connect_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:clickable="true"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:textColor="@drawable/udm_color_menu_text_selector"
            android:background="@drawable/udm_color_menu_bg_selector"
            android:text="@string/tab_name_connect_setting" />



    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/tab_param_setting"
        android:background="@color/text_gray" />

    <FrameLayout
        android:id="@+id/param_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_param_setting">
        
    </FrameLayout>

</RelativeLayout>

