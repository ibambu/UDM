<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/top_title_nav" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:horizontalSpacing="5sp"
                android:numColumns="6"
                android:orientation="horizontal"
                android:stretchMode="columnWidth"
                android:theme="@style/theme_param_setting"
                android:verticalSpacing="25sp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="6"
                    android:layout_gravity="fill"
                    android:height="30dp"
                    android:background="#ebeaea"
                    android:gravity="left|center"
                    android:text="Update Server"
                    android:theme="@style/theme_param_setting" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_columnSpan="6"
                    android:layout_gravity="fill"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:height="35dp"
                    android:gravity="left|center"
                    android:text="Remote Host" />

                <EditText
                    android:id="@+id/ftp_server"
                    android:layout_width="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:height="35dp"
                    android:background="@drawable/border_background"
                    android:text="192.168.0.3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_columnSpan="6"
                    android:layout_gravity="fill"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:height="35dp"
                    android:gravity="left|center"
                    android:text="Remote Port" />

                <EditText
                    android:id="@+id/ftp_port"
                    android:layout_width="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:height="35dp"
                    android:background="@drawable/border_background"
                    android:inputType="number"
                    android:text="21" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:height="35dp"
                    android:gravity="left|center"
                    android:text="User Name" />

                <EditText
                    android:id="@+id/ftp_user"
                    android:layout_width="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:height="35dp"
                    android:background="@drawable/border_background"
                    android:text="udm" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_columnSpan="6"
                    android:layout_gravity="fill"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:height="35dp"
                    android:gravity="left|center"
                    android:text="Password" />

                <EditText
                    android:id="@+id/ftp_password"
                    android:layout_width="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:height="35dp"
                    android:background="@drawable/border_background"
                    android:inputType="textPassword"
                    android:text="udm" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_columnSpan="6"
                    android:layout_gravity="fill"
                    android:background="@android:color/white" />
            </GridLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>