<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DeviceUpgradeActivity">

    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/udm_base_bgcolor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/udm_light_black"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/go_back"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:height="45dp"
                    android:gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_arrow_back" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:height="45dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/do_search"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:height="45dp"
                    android:gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_action_search_white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/udm_light_black">

            </View>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/upgrade_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:max="100"
            android:progress="1"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"/>

        <TextView
            android:id="@+id/upgrade_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_upgrade_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/udm_light_black"
            android:gravity="center"
            android:text="Upgrade All"
            android:textColor="@android:color/white" />

    </LinearLayout>


</RelativeLayout>